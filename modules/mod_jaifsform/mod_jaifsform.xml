<?xml version="1.0" encoding="iso-8859-1"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>MOD_IFS</name>
	<author>JoomlArt.com</author>
	<creationDate>September 2012</creationDate>
	<copyright>J.O.O.M Solutions Co., Ltd.</copyright>
	<license>GNU/GPL V3 </license>
	<authorEmail>webmaster@joomlart.com</authorEmail>
	<authorUrl>www.joomlart.com</authorUrl>
	<version>1.0</version>
	<description>
	 <![CDATA[
	 	MOD_IFS_DESC
	 ]]>
	</description>
	<files>
		<filename module="mod_jaifsform">mod_jaifsform.php</filename>
		<filename module="mod_jaifsform">index.html</filename>
		<folder module="mod_jaifsform">tmpl</folder>
		<folder module="mod_jaifsform">assets</folder>
		<folder module="mod_jaifsform">elements</folder>
		<folder module="mod_jaifsform">launch</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_jaifsform.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/modules/mod_jaifsform/elements">
				<field name="ifskey" type="text" label="MOD_IFS_KEY" description="MOD_IFS_KEY_DESC" default="ff68dcce9ac23a88c76037681e731b78"/>
			    <field name="ifstid" type="text" label="MOD_IFS_ID" description="MOD_IFS_ID_DESC" default="112213" />
			    <field name="ifsgid" type="text" label="MOD_IFS_GID" description="MOD_IFS_GID_DESC" default="291" />
			    <field name="ifsbtntitle" type="text" label="MOD_IFS_BUTTONTITLE" description="MOD_IFS_BUTTONTITLE_DESC" default="" filter="raw" />
			    <field name="ifsintro" type="textarea" label="MOD_IFS_INTRO" description="MOD_IFS_INTRO_DESC" default="" filter="raw" />
			    <field name="ifssuccess" type="textarea" label="MOD_IFS_SUCCESS" description="MOD_IFS_SUCCESS_DESC" default="" filter="raw" />
			</fieldset>
			<fieldset
				name="advanced">

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="0"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>

	</config>
</extension>