<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="params" addfieldpath="templates/ja_t3v3/includes/depend">
		
		<fieldset name="general_params" label="T3V3_PARAMS_GENERAL">
			<field name="jat3v3_template" type="hidden" default="1" value="1" />
			
			<field name="devmode" type="radio" class="btn-group" default="0"
				global="1"
				label="T3V3_GENERAL_DEVELOPMENT_LABEL"
				description="T3V3_GENERAL_DEVELOPMENT_DESC">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>

			<field name="themermode" type="radio" class="btn-group" default="1" 
				global="1"
				label="T3V3_GENERAL_THEMER_LABEL" 
				description="T3V3_GENERAL_THEMER_DESC" >
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			
			<field name="responsive" type="radio" class="btn-group" default="1" 
				global="1"
				label="T3V3_LAYOUT_RESPONSIVE_LABEL" 
				description="T3V3_LAYOUT_RESPONSIVE_DESC" >
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>

		</fieldset>

		<fieldset name="theme_params" label="T3V3_PARAMS_THEME">

			<field name="theme_params_default" type="jadepend" function="@group">
				<option for="logotype" value="text">
						sitename,
						slogan
				</option>
				<option for="logotype" value="image">
					logoimage
				</option>
			</field>

			<field name="theme" type="jafolderlist" default=""
				label="T3V3_GENERAL_THEME_LABEL"
				description="T3V3_GENERAL_THEME_DESC"
				filter=".*"
				directory="assets/less/themes"
				stripext="true"
				hide_none="false" />

			<field name="logotype" type="list" default="text"
				label="T3V3_THEME_LOGOTYPE_LABEL"
				description="T3V3_THEME_LOGOTYPE_DESC" >
				<option value="text">T3V3_THEME_LOGOTYPE_TEXT</option>
				<option value="image">T3V3_THEME_LOGOTYPE_IMAGE</option>
			</field>

			<field name="sitename" type="text" default="Sitename" filter="RAW" global="1" size="50"
				label="T3V3_THEME_SITENAME_LABEL"
				description="T3V3_THEME_SITENAME_DESC" />
			<field name="slogan" type="text" default="Your slogan goes here" filter="RAW" global="1" size="50"
				label="T3V3_THEME_SLOGAN_LABEL"
				description="T3V3_THEME_SLOGAN_DESC" />

			<field name="logoimage" type="media" default=""  global="1"
				label="T3V3_THEME_LOGOIMAGE_LABEL" 
				description="T3V3_THEME_LOGOIMAGE_DESC" />

		</fieldset>
		
		<fieldset name="layout_params" label="T3V3_PARAMS_LAYOUT">

			<field name="mainlayout" type="jafilelist" default="default"
				label="T3V3_LAYOUT_LAYOUT_LABEL"
				descripotion="T3V3_LAYOUT_LAYOUT_DESC"
				filter=".*\.php"
				directory="tpls"
				stripext="true"
				hide_none="false"
				hide_default="true"
			/>

		</fieldset>

		<fieldset name="menu_params" label="T3V3_PARAMS_MEGAMENU">
			<field name="menu_group_default" type="jadepend" function="@group">
				<option for="mm_enable" value="1">
					mm_type,
					mm_end_level,
					mm_image,
					mm_as_bg,
					mm_anim,
					mm_anim_duration
				</option>
				<option for="mm_image" value="1">
					mm_as_bg
				</option>
			</field>
			
			<field name="mm_enable" type="radio" class="btn-group" default="1" 
				label="MM_ENABLE" 
				description="MM_ENABLE_DESC" >
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			
			<field name="mm_type" type="menu"
				label="MM_MENUTYPE_LABEL"
				description="MM_MENUTYPE_DESC" />
			
			<field name="mm_end_level" type="list" default="0"
				label="MM_ENDLEVEL_LABEL"
				description="MM_ENDLEVEL_DESC" >
				<option value="0">JALL</option>
				<option value="1">J1</option>
				<option value="2">J2</option>
				<option value="3">J3</option>
				<option value="4">J4</option>
				<option value="5">J5</option>
				<option value="6">J6</option>
				<option value="7">J7</option>
				<option value="8">J8</option>
				<option value="9">J9</option>
				<option value="10">J10</option>
			</field>
			
			<field name="mm_image" type="radio" class="btn-group" default="1"
				label="MM_ENABLE_IMAGE_LABEL"
				description="MM_ENABLE_IMAGE_DESC" >
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			
			<field name="mm_as_bg" type="radio" class="btn-group" default="1"
				label="MM_IMAGE_AS_BG_LABEL"
				description="MM_IMAGE_AS_BG_DESC">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			
			<field name="mm_anim" type="list" default="slide" label="MM_ANIM_TYPE" description="MM_ANIM_TYPE_DESC">
				<option value="none">MM_ANIM_TYPE_NONE</option>
				<option value="slide">MM_ANIM_TYPE_SLIDE</option>
				<option value="fade">MM_ANIM_TYPE_FADE</option>
				<option value="slide_fade">MM_ANIM_TYPE_SLIDE_FADE</option>
			</field>
			<field name="mm_anim_duration" type="text" default="300" 
				label="MM_ANIM_DURATION" 
				description="MM_ANIM_DURATION_DESC" />
		</fieldset>	
	</fields>
</form>