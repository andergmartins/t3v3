<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="thememagic" addfieldpath="/plugins/system/jat3v3/includes/depend">
		<fieldset name="scaffolding_params" label="T3V3_THEMER_SCAFFOLDING">
			
			<field name="bodyBackground" type="color" default="" label="T3V3_VARS_BODY_BACKGROUND_LABEL" description="T3V3_VARS_BODY_BACKGROUND_DESC" />
			<!--field name="backgroundStyle" type="list" default="cover" label="T3V3_VARS_BACKGROUND_STYLE_LABEL" description="T3V3_VARS_BACKGROUND_STYLE_DESC">
				<option value="cover">T3V3_VARS_BACKGROUND_STYLE_COVER</option>
				<option value="pattern">T3V3_VARS_BACKGROUND_STYLE_PATTERN</option>
			</field>
			<field name="backgroundImage" type="media" default="" label="T3V3_VARS_BACKGROUND_IMAGE_LABEL" description="T3V3_VARS_BACKGROUND_IMAGE_DESC" /-->
			<field name="textColor" type="color" default="" label="T3V3_VARS_TEXT_COLOR_LABEL" description="T3V3_VARS_TEXT_COLOR_DESC" />
			<field name="linkColor" type="color" default="" label="T3V3_VARS_LINK_COLOR_LABEL" description="T3V3_VARS_LINK_COLOR_DESC" />
		</fieldset>
		<fieldset name="visual_params" label="T3V3_THEMER_VISUAL">
			<field name="inputBorderRadius" type="text" default="0px" class="input-tiny" label="T3V3_VARS_ELEMENT_RADIUS_LABEL" description="T3V3_VARS_ELEMENT_RADIUS_DESC" />

			<field name="T3NavbarInverted" type="radio" class="btn-group" default="0"
				label="Navbar Inverted"
				description="Navbar Inverted">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>

			<field name="T3SpotlightsInverted" type="radio" class="btn-group" default="0"
				label="Spotlights Inverted"
				description="Spotlights Inverted">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
		</fieldset>
		<fieldset name="module_params" label="T3V3_THEMER_MODULE">
			<field name="T3moduleBackground" type="color" default="" label="T3V3_VARS_MODULE_BGCOLOR_LABEL" description="T3V3_VARS_MODULE_BGCOLOR_DESC" />
			<field name="T3moduleColor" type="color" default="" label="T3V3_VARS_MODULE_COLOR_LABEL" description="T3V3_VARS_MODULE_COLOR_DESC" />
			<field name="T3moduleTitleBackground" type="color" default="" label="T3V3_VARS_MODULE_TITLE_BGCOLOR_LABEL" description="T3V3_VARS_MODULE_TITLE_BGCOLOR_DESC" />
			<field name="T3moduleTitleColor" type="color" default="" label="T3V3_VARS_MODULE_TITLE_COLOR_LABEL" description="T3V3_VARS_MODULE_TITLE_COLOR_DESC" />
		</fieldset>
		<!--fieldset name="spotlights_params" label="T3V3_THEMER_SPOTLIGHTS">
			<field name="invertSpotlights" type="radio" default="0" label="T3V3_VARS_INVERT_SPOTLIGHT_LABEL" description="T3V3_VARS_INVERT_SPOTLIGHT_DESC">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
		</fieldset-->
		<fieldset name="typo_params" label="T3V3_PARAMS_TYPO">
			<field name="typo_params_default" type="jadepend" function="@group">
				<option for="baseFontFamily" value="-1">baseFontFamily_custom</option>
				<option for="headingsFontFamily" value="-1">headingsFontFamily_custom</option>
			</field>

			<field name="baseFontSize" type="text" default="14px" size="10" class="input-tiny" 
				label="T3V3_TYPO_FONTSIZE_LABEL"
				description="T3V3_TYPO_FONTSIZE_DESC" />

			<field name="baseFontFamily" type="list" default="sans-serif" 
				label="T3V3_TYPO_FONTFAMILY_LABEL" 
				description="T3V3_TYPO_FONTFAMILY_DESC" >
				<option value="serif">T3V3_TYPO_FONTFAMILY_SERIF</option>
				<option value="sans-serif">T3V3_TYPO_FONTFAMILY_SANS_SERIF</option>
				<option value="monospace">T3V3_TYPO_FONTFAMILY_MONOSPACE</option>
				<option value="-1">T3V3_TYPO_FONTFAMILY_CUSTOM</option>	
			</field>
			<field name="baseFontFamily_custom" type="text" default="sans-serif"  size="30"
				label="T3V3_TYPO_FONTFAMILY_CUSTOM_LABEL"
				description="T3V3_TYPO_FONTFAMILY_CUSTOM_DESC" />

			<field name="headingsFontFamily" type="list" default="sans-serif"
				label="T3V3_TYPO_HEADINGFONTFAMILY_LABEL" 
				description="T3V3_TYPO_HEADINGFONTFAMILY_DESC" >
				<option value="serif">T3V3_TYPO_FONTFAMILY_SERIF</option>
				<option value="sans-serif">T3V3_TYPO_FONTFAMILY_SANS_SERIF</option>
				<option value="monospace">T3V3_TYPO_FONTFAMILY_MONOSPACE</option>
				<option value="-1">T3V3_TYPO_FONTFAMILY_CUSTOM</option>	
			</field>
			<field name="headingsFontFamily_custom" type="text" default="sans-serif"  size="30"
				label="T3V3_TYPO_FONTFAMILY_CUSTOM_LABEL"
				description="T3V3_TYPO_FONTFAMILY_CUSTOM_DESC" />

		</fieldset>	
	</fields>
</form>