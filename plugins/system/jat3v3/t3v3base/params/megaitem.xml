<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="params" addfieldpath="/plugins/system/jat3v3/includes/depend">
		<fieldset name="mega-params" label="T3V3_MEGAMENU">
			<field 
				name="group" 
				type="jadepend"
				function="@group">
					<option for="mega_subcontent" value="mod">
						mega_subcontent_mod_modules
					</option>
					<option for="mega_subcontent" value="pos">
						mega_subcontent_pos_positions
					</option>
			</field>
			<field name="mega_showtitle" type="radio" default="1" label="MM_SHOW_TITLE" description="MM_SHOW_TITLE_DESC">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			<field name="mega_desc" type="textarea" rows="5" cols="30" default="" label="MM_ADD_DESC" description="MM_ADD_DESC_DESC" />
			<field name="mega_multicol" type="radio" default="0" label="MM_COLUMNS" description="MM_COLUMNS_DESC">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			<field name="mega_group" type="radio" default="0" label="MM_GROUP" description="MM_GROUP_DESC">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			<field name="mega_width" type="list" default="2" label="MM_SUBMENU_WIDTH" description="MM_SUBMENU_WIDTH_DESC" >
				<option value="2">JDEFAULT</option>
				<option value="3">MM_WIDTH_3</option>
				<option value="4">MM_WIDTH_4</option>
				<option value="5">MM_WIDTH_5</option>
				<option value="6">MM_WIDTH_6</option>
				<option value="7">MM_WIDTH_7</option>
				<option value="8">MM_WIDTH_8</option>
				<option value="9">MM_WIDTH_9</option>
				<option value="10">MM_WIDTH_10</option>
				<option value="11">MM_WIDTH_11</option>
				<option value="12">MM_WIDTH_12</option>
			</field>
			<field name="mega_subcontent" type="list" default="0" label="MM_SUBMENU_CONTENT" description="MM_SUBMENU_CONTENT_DESC">
				<option value="0">MM_FROM_CHILD</option>
				<option value="mod">MM_FROM_MODULE</option>
				<option value="pos">MM_FROM_MODULE_POSITION</option>
			</field>
			<field name="mega_subcontent_mod_modules" type="jamodules" 
				default="0" 
				multiple="1"
				label="MM_SELECT_MODULES" 
				description="MM_SELECT_MODULES_DESC" />
			<field name="mega_subcontent_pos_positions" type="japositions" 
				default="0"
				multiple="1"
				label="MM_SELECT_POSITIONS"
				description="MM_SELECT_POSITIONS_DESC" />
		</fieldset>			
	</fields>
</form>